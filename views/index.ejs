      <a href="/foods" class="buttons-container">
        <button class="hero-btns"> View Foods </button>
      </a>
      <!-- <button> View Allergens </button> -->
  </section>

  <section class="app-features">
    <h2>Explore App Features</h2>
  </section>
</main>


